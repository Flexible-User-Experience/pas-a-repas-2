{% extends "@GremoZurbInk/foundation-emails/base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        {{ zurb_ink_add_stylesheet("css/mail.css") }}
    </style>
{% endblock %}

{% block body %}
    <table class="body">
        <tr>
            <td class="center" align="center" valign="top">
                <center>
                    <table class="container">
                        <tbody>
                        <tr class="white-color">
                            <td>
                                {# Header #}
                                <table class="row">
                                    <tbody>
                                    <tr>
                                        <th class="vertical-padding">
                                            <a href="{{ url('app_homepage') }}">
                                                <img style="margin-top:40px;margin-bottom:50px" class="text-center"
                                                     alt="logo"
                                                     src="{{ get_absolute_asset_path_context_independent('build/img/email-logo.png') }}"
                                                     width="300" height="150">
                                            </a>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                                {# Body #}
                                {% block content %}{% endblock %}
                                {# Footer #}
                                {% block footer %}
                                    <table class="row light-grey-background">
                                        <tr>
                                            <th class="small-4 large-4 first columns">
                                                <h6 class="grey-color only-normal-m-top">Segueix-nos</h6>
                                            </th>
                                            <th class="small-4 large-4 columns">
                                                <h6 class="grey-color only-normal-m-top">Telèfons</h6>
                                            </th>
                                            <th class="small-4 large-4 columns last">
                                                <h6 class="grey-color only-normal-m-top">Adreça</h6>
                                            </th>
                                            <th class="expander"></th>
                                        </tr>
                                    </table>
                                    <table class="row light-grey-background">
                                        <tr>
                                            <th class="small-1 large-1 first columns">
                                                <a href="https://www.facebook.com/pasarepas">
                                                    <img class="footer-icon"
                                                         src="{{ get_absolute_asset_path_context_independent('build/img/email_facebook.png') }}"
                                                         alt="facebook logo">
                                                </a>
                                            </th>
                                            <th class="small-3 large-3 columns">
                                                <a href="https://www.instagram.com/pasarepas">
                                                    <img class="footer-icon"
                                                         src="{{ get_absolute_asset_path_context_independent('build/img/email-instagram.png') }}"
                                                         alt="instagram logo">
                                                </a>
                                            </th>
                                            <th class="small-4 large-4 columns">
                                                <p class="grey-color">
                                                    {{ main_brand_phone_1 }}
                                                </p>
                                            </th>
                                            <th class="small-4 large-4 columns last">
                                                <p class="grey-color">
                                                    {{ main_brand_address }}<br>
                                                    43870 Amposta<br>
                                                    (Tarragona)
                                                </p>
                                            </th>
                                            <th class="expander"></th>
                                        </tr>
                                    </table>
                                {% endblock %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </center>
            </td>
        </tr>
    </table>
{% endblock %}
