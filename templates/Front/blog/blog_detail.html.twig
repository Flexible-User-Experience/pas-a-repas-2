{% extends "Front/blog/blog.html.twig" %}

{% block title %}{{ post.title }} Â· {{ parent() }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">&nbsp;</div>
        </div>
    </div>
    {% if not post.enabled %}
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-danger" role="alert"><i class="fa fa-exclamation-circle"></i> Esborrany</div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                {# left side #}
                {% if post.imageName %}
                    <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('750xY') }}" class="img-fluid mb-5" alt="{{ post.title }}">
                {% else %}
                    <img src="{{ asset('build/img/blog-head.png') | imagine_filter('750xY') }}" class="img-fluid mb-5" alt="{{ 'frontend.index.main.image' | trans | capitalize }}">
                {% endif %}
                <h1 class="c-violet mt-0">{{ post.title }}</h1>
                <h6>{{ post.publishedAt | date('d/m/Y') }}{% if post.categories | length > 0 %}&nbsp;&nbsp;|&nbsp;&nbsp;{{ post.categories | join(', ') }}{% endif %}</h6>
                {{ post.description | raw }}<br><br><br>
            </div>
            <div class="col-sm-4">
                {# right side #}
                {% if categories | length > 0 %}
                    <h3 class="c-cyan">{{ 'frontend.blog.main.categories' | trans | upper }}</h3>
                    {% block categories %}
                        <div class="list-group list-group-flush">
                            {% for category in categories %}
                                {% if category.posts | length > 0 %}
                                    <a href="{{ path('app_blog_category_detail', {slug: category.slug}) }}" class="list-group-item list-group-item-action">{{ category.title }}</a>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endblock %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
