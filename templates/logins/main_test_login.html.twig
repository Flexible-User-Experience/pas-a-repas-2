{% extends "logins/base.html.twig" %}

{% block title %}{{ controller_name }} {{ parent() }}{% endblock %}

{% block javascripts_head %}
    {{ parent() }}
    <script>
        window.fbAsyncInit = function() {
            FB.init({
                appId      : '{{ facebook_api_key }}',
                cookie     : true,
                xfbml      : true,
                version    : 'v5.0'
            });
            FB.AppEvents.logPageView();
        };
        (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/es_ES/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ controller_name }}</li>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-6 mb-5">Hello {{ controller_name }}! âœ…</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <fb:login-button scope="public_profile,email" onlogin="checkLoginState();"></fb:login-button>
                <div id="status"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="fb-like" data-share="true" data-width="450" data-show-faces="true"></div>
            </div>
        </div>
    </div>
{% endblock %}
